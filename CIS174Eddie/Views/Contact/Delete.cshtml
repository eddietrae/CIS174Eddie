@model Contact
@{
    ViewBag.Title = "Delete Contact";
    <!--Form to confirm deletion of contact-->
}

<h2>Confirm Deletion</h2>

<h3>@Model.Name (@Model.PhoneNum)</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Delete</button> <a asp-controller="ContactHome" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>