@model IEnumerable<Country>
@{ 
    ViewData["Title"] = "Olympic Games";
    string Active(string filter, string selected)
    {
        return (filter.ToLower() == selected.ToLower()) ? "active" : "";
    }
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (Game game in ViewBag.Games)
            {
                <a asp-action="Index" asp-route-activeGame="@game.GameID" asp-route-activeCat="@ViewBag.ActiveCat"
                   class="list-group-item @Active(game.GameID, ViewBag.ActiveGame)"> @game.Name</a>
            }
        </div>
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category category in ViewBag.Categories)
            {
                <a asp-action="Index" asp-route-activeGame="@ViewBag.ActiveGame" asp-route-activeCat="@category.CategoryID"
                   class="list-group-item @Active(category.CategoryID, ViewBag.ActiveCat)"> @category.Name</a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model)
            {
                <li class="list-inline-item">
                    <img src="~/images/@country.FlagImage" alt="@country.Name" title="@country.Name | @country.Game.Name @country.Category.Name"/>
                </li>
            }
        </ul>
    </div>
</div>