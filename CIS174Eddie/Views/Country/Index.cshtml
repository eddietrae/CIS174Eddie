@model CountryListViewModel
@{ 
    ViewData["Title"] = "Olympic Games";
    Layout = "_CountryLayout";
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (Game game in Model.Games)
            {
                <a asp-action="Index" asp-route-activeGame="@game.GameID" asp-route-activeCat="@ViewBag.ActiveCat"
                   class="list-group-item @Model.CheckActiveGame(game.GameID)"> @game.Name</a>
            }
        </div>
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category category in Model.Categories)
            {
                <a asp-action="Index" asp-route-activeGame="@Model.ActiveGame" asp-route-activeCat="@category.CategoryID"
                   class="list-group-item @Model.CheckActiveCat(category.CategoryID)"> @category.Name</a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@country.CountryID">
                        <img src="~/images/@country.FlagImage" alt="@country.Name" title="@country.Name | @country.Game.Name @country.Category.Name" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>