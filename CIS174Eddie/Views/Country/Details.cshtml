@model CountryViewModel
@{ 
    ViewData["Title"] = "Team Details";
    Layout = "_CountryLayout";
}

<h2>Team Details</h2>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/images/@Model.Country.FlagImage" alt="" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>@Model.Country.Game.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>@Model.Country.Category.Name</h4>
            </li>
            <li class="list-group-item">
                <form asp-action="Add" method="post">

                    <a asp-action="Index" class="btn btn-primary" asp-route-activeGame="@Model.ActiveGame" 
                       asp-route-activeCat="@Model.ActiveCat">Return to Home Page</a>

                    <button type="submit" class="btn btn-primary">
                        Add to Favorites
                    </button>

                    <input type="hidden" asp-for="Country.CountryID"/>
                </form>
            </li>
        </ul>
    </div>
</div>
